<div class="xphoto [[+position]]" style="width: [[+outer_width]]">
	<div class="xphoto-img">
		[[+photo_tpl]]
	</div>
	<div class="xphoto-title">
		<h4>[[+title]]</h4>
	</div>
	<div class="xphoto-description">
		<p>[[+description]]</p>
	</div>
	<div class="xphoto-flickr-link">
		<a href="[[+flickr_url]]" title="[[%xflickr.view_on_flickr]]" target="_blank">
			<img class="xphoto-flickr-icon" src="[[+flickr_icon]]" />
		</a>
	</div>
</div>
